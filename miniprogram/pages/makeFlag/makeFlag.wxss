/* pages/makeFlag/makeFlag.wxss */
.topBar {
    position: fixed;
    top: 0;
    width: 100%;
    height: 47px;
    z-index: 999;
    background-color: #ffe768;
    
}
.MKFLG{
    display: flex;
    justify-content: center;
    align-items: center;
    position: fixed;
    top: 0;
    width: 100%;
    height: 45px;
    z-index: 999;
    background-color: #ffe768;
}
.topText{
    font-size: 36rpx;
    font-weight: bold;
}
navigator{
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 60rpx;
    font-weight: bold;
    position: absolute;
    left: 40rpx;
    width: 40rpx;
    height: 40rpx;
}
.flagBox {
    display: flex;
    align-items: center;
    flex-direction: column;
    width: 100%;
    margin-top: 122rpx;
}
.boxSetting {
    width: 702rpx;

}
.boxSetting text{
    padding: 0 20rpx;
    font-size: 32rpx;
	color: #808080;
}
.boxSetting>view,
.boxSetting>.confirm {
    position: relative;
    margin: 14rpx 0 26rpx;
	box-shadow: 0 2rpx 14rpx 0 
        rgba(0, 0, 0, 0.1);
    border-radius: 34rpx;
    background-color: #fff;
    padding: 20rpx 20rpx;
    height: auto;
}
.name view{
    padding: 0 20rpx;
}
.name input {
    width: 702rpxpx;
	height: 68rpx;
	background-color: #ffffff;
    border-radius: 34rpx;
    padding: 0 24rpx;
}

.notice textarea{
    padding: 18rpx 22rpx;
}
.sort-big .radio-group{
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 75rpx;
    margin-bottom: 20rpx;
}
.sort-big .radio{
    width: 160rpx;
    height: 75rpx;
    line-height: 75rpx;
    text-align: center;
    border-bottom: 10rpx solid #e3e3e3;
    color: #808080;
    /* font-size: 28rpx; */
}
.sort-big .radio-active{
    border-bottom: 10rpx solid #fee966;
}
.sort-small .radio-group{
    margin: 0rpx 0rpx 14rpx;
}
.sort-small .radio,
.addSort,
.selectNum .radio,
.selectGrade .checkbox,
.selectCycle .radio,
.selectF .radio,
.addCycle{
    display: inline-block;
    width: auto;
	height: 60rpx;
    background-color: #e3e3e3;
    text-align: center;
    line-height: 60rpx;
    border-radius: 30rpx;
    padding: 0 25rpx;
    margin: 10rpx 11rpx;
    font-size: 28rpx;
}
.sort-small .radio-active,
.selectNum .radio-active,
.selectGrade .checkbox-active,
.selectCycle .radio-active,
.selectF .radio-active{
    background-color: #ffe768;
}

.addSort {
    display: inline-block;
    width: auto;
}
.addSort input,
.addCycle input {
    display: inline-block;
    width: 85rpx;
    height: 100%;
}

.inputBgc{
    background-color: #ffe768;
}
.showMask{
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
}
