/* pages/user/user.wxss */
page{
    position: relative;
    background-color: #f7e164;
    /* background-color: black; */
}
.portraitBox{
    width: 200rpx;
    height: 200rpx;
    background-color: pink;
    border-radius: 50%;
    text-align: center;
    line-height: 200rpx;
    color: white;
    margin-left: 50%;
    position: absolute;
    top: -86rpx;
    transform: translate(-50%,0);
}
.userBox{
    position: relative;
    height: 1210rpx;
    margin-top: 111rpx;
    background-color: white;
    border-top-left-radius: 8%;
    border-top-right-radius: 8%;
    z-index: -10;
}
.userName{
    /* position: relative; */
    width: 100%;
    transform: translate(0, 155rpx);
    color: #999999;
    text-align: center;
    background-color: black;
    font-size: 37rpx;
}
.icon-edit{
    position: absolute;
    margin-left: 57%;
    transform: translate(30rpx, -36rpx);
    font-size: 35rpx;
    color: #999999;
    margin-top: 150rpx;
}
.tagBox{
    width: 100%;
    margin-top: 200rpx;
    font-size: 30rpx;
    background-color: #fdf1b6;
    color: #7e7e7e;
}