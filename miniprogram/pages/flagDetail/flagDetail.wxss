page{
    padding: 0 20rpx;
}
.topBar {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 47px;
    z-index: 999;
    background-color: #ffe768;
    
}
.FLGD{
    display: flex;
    align-items: center;
    position: fixed;
    top: 0;
    width: 100%;
    height: 45px;
    z-index: 999;
    background-color: #ffe768;
}
.topText{
    width: 240rpx;
    font-size: 30rpx;
    font-weight: bold;
    overflow: hidden;
}
.smaTag{
    display: inline-block;
    width: auto;
    height: 50rpx;
    background-color: #ffffff;
    border-radius: 25rpx;
    padding: 0 15rpx;
    margin: 0 10rpx;
    line-height: 50rpx;
    font-size: 24rpx;
    color: #404040;
}
.notice-title{ 
    padding: 14rpx 0;
    color: #878787;
    font-size: 30rpx;
}

.card-count{
    margin-top: 43rpx;
    margin-bottom: 30rpx;
    background-color: transparent;
    font-size: 30rpx;
    font-weight: 500;
}

.the-card{
    margin-bottom: 16rpx;
}
.click-to-punch{
    position: absolute;
    display: flex;
    right: 60rpx;
    bottom: 200rpx;
}

.clickOn{
    position: fixed;
    bottom: 450rpx;
    right: 50rpx;
    width: 120rpx;
    height: 60rpx;
    text-align: center;
    line-height: 60rpx;
    background-color: #ffe768;
    color: #000;
    border-radius: 30rpx;
}

.joinFlag,
.giveUpFlag{
    border-radius: 20rpx;
    /* font-size: 28rpx; */
}
.confirmBox,
.confirmBox-2{
    display: flex;
    flex-direction: column;
    align-items: center;
    position: absolute;
    top: 451rpx;
    left: 89rpx;
    width: 572rpx;
	height: 390rpx;
    background-color: #ffffff;
    border-radius: 20rpx;
    z-index: 2;
}
.confirmBox-2{
    height: 316rpx;
}
.mask{
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.4);
    z-index: 1;
}
.confirm-1{
    font-size: 36rpx;
    padding: 64rpx 0 32rpx;
}
.confirm-2{
    font-size: 30rpx;
    padding-bottom: 50rpx;
}
.keepUp,
.confirmGiveUp{
    font-size: 30rpx;
    color: #e89800;
    width: 100%;
    height: 74rpx;
    text-align: center;
    line-height: 74rpx;
    border-top: 4rpx solid #f2f2f2;
}
.confirmGiveUp{
    color: #000;
}