page{
    padding: 0 20rpx;
}
.notice-title{ 
    padding: 14rpx 0;
    color: #878787;
    font-size: 30rpx;
}

.card-count{
    margin-top: 43rpx;
    margin-bottom: 30rpx;
    background-color: transparent;
    font-size: 30rpx;
    font-weight: 500;
}

.the-card{
    margin-bottom: 16rpx;
}
.click-to-punch{
    position: absolute;
    display: flex;
    right: 60rpx;
    bottom: 200rpx;
}

.giveupFlag{
    border-radius: 20rpx;
    font-size: 28rpx;
}
.confirmBox,
.confirmBox-2{
    display: flex;
    flex-direction: column;
    align-items: center;
    position: absolute;
    top: 451rpx;
    left: 89rpx;
    width: 572rpx;
	height: 390rpx;
    background-color: #ffffff;
    border-radius: 20rpx;
    z-index: 2;
}
.confirmBox-2{
    height: 316rpx;
}
.mask{
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.4);
    z-index: 1;
}
.confirm-1{
    font-size: 36rpx;
    padding: 64rpx 0 32rpx;
}
.confirm-2{
    font-size: 30rpx;
    padding-bottom: 50rpx;
}
.keepUp,
.confirmGiveUp{
    font-size: 30rpx;
    color: #e89800;
    width: 100%;
    height: 74rpx;
    text-align: center;
    line-height: 74rpx;
    border-top: 4rpx solid #f2f2f2;
}
.confirmGiveUp{
    color: #000;
}